@model DrawingsServer.DomainModel.Drawing

@using (Ajax.BeginForm("Paging", "Drawings", new AjaxOptions() { UpdateTargetId = "drawingsTable" }, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset class="filter-drawings">
        <legend>Filter Drawings</legend>

        <div class="field filter-drawings-field">
            <div class="editor-label">
                @Html.LabelFor(model => model.Title)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>
        <p>
            <input type="submit" value="Filter" />
        </p>
    </fieldset>
}
